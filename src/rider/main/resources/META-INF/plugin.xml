<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.jitasmviewer</id>
  <name>JitAsmViewer</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Author</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Sample description</p>
]]>
  </description>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="CefToolWindow"
                secondary="true"
                anchor="right"
                factoryClass="com.jetbrains.rider.plugins.jitasmviewer.JitAsmViewerToolWindowFactory"
                icon="ReSharperIcons.Common.Bulb"/>

    <rdclient.view key="com.jetbrains.rd.ide.model.BeCefToolWindowPanel"
                   implementationClass="com.jetbrains.rider.plugins.jitasmviewer.JitAsmViewerToolWindowPanel" />
  </extensions>
    <actions>
        <action id="com.jetbrains.rider.plugins.jitasmviewer.JitAsmProviderAction"
                class="com.jetbrains.rider.plugins.jitasmviewer.JitAsmProviderAction"
                text="View JIt codegen for selected method"/>
    </actions>
</idea-plugin>
